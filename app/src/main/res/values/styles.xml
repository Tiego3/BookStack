<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="TextViewStyle">
        <item name="android:textColor">@color/brownish</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="HeaderTextViewStyle">
        <item name="android:textColor">@color/headerbrown</item>
        <item name="android:background">@color/headerbackgroundforn</item>
        <item name="android:fontFamily">@font/roxboroughcf</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/brownish</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/brownish</item>
        <item name="android:textColorHint">@color/bluegrey</item>
    </style>

    <style name="BtnStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/headerbrown</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="HeaderBackgroundColour">
        <item name="android:textColor">@color/backgroundforn</item>
    </style>


</resources>